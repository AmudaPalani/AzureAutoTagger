{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "defaultValue": "eastus"
        },
        "resourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "defaultValue": "rg-autotaggerv2"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('resourceGroupName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
            ],
            "tags": {
            }
        },
        {
            "name": "eventgridfunctionapp",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', parameters('resourceGroupName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/acampb/AzureAutoTagger/main/eventgridfunction.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                }
            }
        },
        {
            "name": "rbac",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "location": "[parameters('location')]",
            "dependsOn":[
                "eventgridfunctionapp"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/acampb/AzureAutoTagger/main/rbac.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "principalId": {
                        "value": "[reference('eventgridfunctionapp').outputs.functionAppIdentityId.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "functionAppIdentityId": {
            "type": "string",
            "value": "[reference('eventgridfunctionapp').outputs.functionAppIdentityId.value]"
        }
    }
}